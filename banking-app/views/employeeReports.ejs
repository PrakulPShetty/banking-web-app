<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reports - NOVA BANK</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #f8fafc, #e0e7ff);
      min-height: 100vh;
    }

    /* Sidebar */
    .sidebar {
      position: fixed;
      left: 0;
      top: 0;
      width: 260px;
      height: 100vh;
      background: linear-gradient(180deg, #1e293b 0%, #312e81 100%);
      transition: all 0.3s ease;
      z-index: 1000;
    }

    .sidebar-header {
      padding: 20px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    .sidebar-logo {
      width: 40px;
      height: 40px;
      background: #6366f1;
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      flex-shrink: 0;
    }

    .sidebar-title {
      font-size: 18px;
      font-weight: 700;
      color: white;
    }

    .sidebar nav {
      padding: 20px 10px;
    }

    .sidebar a {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 16px;
      color: rgba(255,255,255,0.8);
      text-decoration: none;
      border-radius: 8px;
      margin-bottom: 4px;
      transition: all 0.3s ease;
    }

    .sidebar a:hover {
      background: rgba(255,255,255,0.1);
      color: white;
      transform: translateX(5px);
    }

    .sidebar a.active {
      background: #6366f1;
      color: white;
    }

    .sidebar a i {
      width: 20px;
      font-size: 18px;
    }

    /* Main Content */
    .main-content {
      margin-left: 260px;
      min-height: 100vh;
      transition: all 0.3s ease;
    }

    /* Navbar */
    .navbar {
      background: white;
      padding: 16px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      position: sticky;
      top: 0;
      z-index: 100;
    }

    .navbar-brand h1 {
      font-size: 22px;
      font-weight: 700;
      background: linear-gradient(135deg, #6366f1, #8b5cf6);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .profile-btn {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 8px 16px;
      background: #f3f4f6;
      border: none;
      border-radius: 8px;
      cursor: pointer;
    }

    .profile-btn i {
      color: #6366f1;
      font-size: 20px;
    }

    /* Content Area */
    .content {
      padding: 30px;
    }

    .page-header {
      margin-bottom: 30px;
    }

    .page-title {
      font-size: 32px;
      color: #1f2937;
      margin-bottom: 8px;
      font-weight: 700;
    }

    .page-subtitle {
      color: #6b7280;
      font-size: 16px;
    }

    /* Stats Cards */
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-card {
      background: white;
      padding: 24px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.06);
      transition: all 0.3s ease;
      border-left: 4px solid #6366f1;
    }

    .stat-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 16px rgba(99,102,241,0.15);
    }

    .stat-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 12px;
    }

    .stat-title {
      color: #6b7280;
      font-size: 14px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .stat-icon {
      font-size: 24px;
      color: #6366f1;
    }

    .stat-value {
      font-size: 32px;
      font-weight: 700;
      color: #1f2937;
    }

    /* Tabs */
    .tabs {
      display: flex;
      gap: 8px;
      margin-bottom: 24px;
      border-bottom: 2px solid #e5e7eb;
      flex-wrap: wrap;
    }

    .tab {
      padding: 12px 24px;
      background: transparent;
      border: none;
      border-bottom: 3px solid transparent;
      color: #6b7280;
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .tab:hover {
      color: #6366f1;
    }

    .tab.active {
      color: #6366f1;
      border-bottom-color: #6366f1;
    }

    /* Tab Content */
    .tab-content {
      display: none;
    }

    .tab-content.active {
      display: block;
      animation: fadeIn 0.3s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    /* Table Styles */
    .table-container {
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.06);
      overflow: hidden;
    }

    .table-header {
      padding: 20px;
      background: #f9fafb;
      border-bottom: 1px solid #e5e7eb;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .table-title {
      font-size: 18px;
      font-weight: 700;
      color: #1f2937;
    }

    .search-box {
      padding: 8px 16px;
      border: 1px solid #e5e7eb;
      border-radius: 8px;
      width: 250px;
      font-size: 14px;
    }

    .table-wrapper {
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    thead {
      background: #f9fafb;
    }

    th {
      padding: 12px 16px;
      text-align: left;
      font-size: 12px;
      font-weight: 700;
      color: #6b7280;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      border-bottom: 2px solid #e5e7eb;
    }

    td {
      padding: 16px;
      border-bottom: 1px solid #f3f4f6;
      color: #1f2937;
      font-size: 14px;
    }

    tbody tr {
      transition: background 0.2s ease;
    }

    tbody tr:hover {
      background: #f9fafb;
    }

    .badge {
      display: inline-block;
      padding: 4px 12px;
      border-radius: 6px;
      font-size: 12px;
      font-weight: 600;
      text-transform: capitalize;
    }

    .badge-deposit {
      background: #dcfce7;
      color: #166534;
    }

    .badge-withdraw {
      background: #fee2e2;
      color: #991b1b;
    }

    .badge-transfer {
      background: #fef3c7;
      color: #92400e;
    }

    .amount-positive {
      color: #16a34a;
      font-weight: 600;
    }

    .amount-negative {
      color: #dc2626;
      font-weight: 600;
    }

    @media (max-width: 768px) {
      .sidebar {
        width: 70px;
      }

      .sidebar-title,
      .sidebar a span {
        display: none;
      }

      .main-content {
        margin-left: 70px;
      }

      .stats-grid {
        grid-template-columns: 1fr;
      }

      .search-box {
        width: 100%;
      }

      .table-header {
        flex-direction: column;
        gap: 12px;
        align-items: flex-start;
      }
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <div class="sidebar-header">
      <div style="display: flex; align-items: center; gap: 10px;">
        <div class="sidebar-logo">
          <i class="fa fa-building"></i>
        </div>
        <div class="sidebar-title">NOVA BANK</div>
      </div>
    </div>
    <nav>
      <a href="/employee-dashboard">
        <i class="fa fa-home"></i>
        <span>Dashboard</span>
      </a>
      <a href="/employee/add-customer">
        <i class="fa fa-user-plus"></i>
        <span>Add Customer</span>
      </a>
      <a href="/employee/view-customer">
        <i class="fa fa-search"></i>
        <span>View Customer</span>
      </a>
      <a href="/employee/edit-customer">
        <i class="fa fa-user-edit"></i>
        <span>Edit Customer</span>
      </a>
      <a href="/employee/transactions">
        <i class="fa fa-exchange-alt"></i>
        <span>Transactions</span>
      </a>
      <a href="/employee/daily-report">
        <i class="fa fa-calendar-day"></i>
        <span>Daily Report</span>
      </a>
      <a href="/employee/statement/12345">
        <i class="fa fa-file-alt"></i>
        <span>Statement</span>
      </a>
      <a href="/employee/reports" class="active">
        <i class="fa fa-chart-line"></i>
        <span>Reports</span>
      </a>
      <a href="/employee-logout">
        <i class="fa fa-sign-out-alt"></i>
        <span>Logout</span>
      </a>
    </nav>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <!-- Navbar -->
    <div class="navbar">
      <div class="navbar-brand">
        <h1>Reports & Analytics</h1>
      </div>
      <button class="profile-btn">
        <i class="fa fa-user-circle"></i>
        <span><%= employee.name %></span>
      </button>
    </div>

    <!-- Content -->
    <div class="content">
      <div class="page-header">
        <h1 class="page-title">Comprehensive Reports</h1>
        <p class="page-subtitle">View detailed analytics and account information</p>
      </div>

      <!-- Stats Cards -->
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-header">
            <span class="stat-title">Total Customers</span>
            <i class="fa fa-users stat-icon"></i>
          </div>
          <div class="stat-value"><%= stats.totalCustomers %></div>
        </div>

        <div class="stat-card">
          <div class="stat-header">
            <span class="stat-title">Total Balance</span>
            <i class="fa fa-wallet stat-icon"></i>
          </div>
          <div class="stat-value">₹<%= stats.totalBalance %></div>
        </div>

        <div class="stat-card">
          <div class="stat-header">
            <span class="stat-title">Total Transactions</span>
            <i class="fa fa-exchange-alt stat-icon"></i>
          </div>
          <div class="stat-value"><%= stats.totalTransactions %></div>
        </div>

        <div class="stat-card">
          <div class="stat-header">
            <span class="stat-title">Today's Transactions</span>
            <i class="fa fa-calendar-day stat-icon"></i>
          </div>
          <div class="stat-value"><%= stats.todayTransactionsCount %></div>
        </div>

        <div class="stat-card">
          <div class="stat-header">
            <span class="stat-title">Total Deposits</span>
            <i class="fa fa-arrow-down stat-icon" style="color: #16a34a;"></i>
          </div>
          <div class="stat-value" style="color: #16a34a;">₹<%= stats.totalDeposits %></div>
        </div>

        <div class="stat-card">
          <div class="stat-header">
            <span class="stat-title">Total Withdrawals</span>
            <i class="fa fa-arrow-up stat-icon" style="color: #dc2626;"></i>
          </div>
          <div class="stat-value" style="color: #dc2626;">₹<%= stats.totalWithdrawals %></div>
        </div>
      </div>

      <!-- Tabs -->
      <div class="tabs">
        <button class="tab active" onclick="openTab('customers')">
          <i class="fa fa-users"></i> All Customers
        </button>
        <button class="tab" onclick="openTab('transactions')">
          <i class="fa fa-exchange-alt"></i> All Transactions
        </button>
        <button class="tab" onclick="openTab('today')">
          <i class="fa fa-calendar-day"></i> Today's Activity
        </button>
      </div>

      <!-- Tab Content: All Customers -->
      <div id="customers" class="tab-content active">
        <div class="table-container">
          <div class="table-header">
            <h3 class="table-title">All Customer Accounts</h3>
            <input type="text" class="search-box" placeholder="Search by name or account..." onkeyup="filterTable('customersTable', this.value)">
          </div>
          <div class="table-wrapper">
            <table id="customersTable">
              <thead>
                <tr>
                  <th>Account No</th>
                  <th>Full Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>City</th>
                  <th>Balance</th>
                  <th>Created At</th>
                </tr>
              </thead>
              <tbody>
                <% customers.forEach(customer => { %>
                <tr>
                  <td><strong><%= customer.account_no %></strong></td>
                  <td><%= customer.fullname %></td>
                  <td><%= customer.email %></td>
                  <td><%= customer.phone %></td>
                  <td><%= customer.city %></td>
                  <td class="amount-positive">₹<%= parseFloat(customer.balance).toFixed(2) %></td>
                  <td><%= new Date(customer.created_at).toLocaleDateString() %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Tab Content: All Transactions -->
      <div id="transactions" class="tab-content">
        <div class="table-container">
          <div class="table-header">
            <h3 class="table-title">All Transactions</h3>
            <input type="text" class="search-box" placeholder="Search by account..." onkeyup="filterTable('transactionsTable', this.value)">
          </div>
          <div class="table-wrapper">
            <table id="transactionsTable">
              <thead>
                <tr>
                  <th>Date & Time</th>
                  <th>Account No</th>
                  <th>Type</th>
                  <th>Amount</th>
                  <th>Balance After</th>
                  <th>To Account</th>
                </tr>
              </thead>
              <tbody>
                <% transactions.forEach(tx => { %>
                <tr>
                  <td><%= new Date(tx.date).toLocaleString() %></td>
                  <td><strong><%= tx.account_no %></strong></td>
                  <td>
                    <span class="badge badge-<%= tx.type %>"><%= tx.type %></span>
                  </td>
                  <td class="<%= tx.type === 'deposit' ? 'amount-positive' : 'amount-negative' %>">
                    <%= tx.type === 'deposit' ? '+' : '-' %>₹<%= parseFloat(tx.amount).toFixed(2) %>
                  </td>
                  <td>₹<%= parseFloat(tx.balance).toFixed(2) %></td>
                  <td><%= tx.to_account || '-' %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Tab Content: Today's Activity -->
      <div id="today" class="tab-content">
        <div class="table-container">
          <div class="table-header">
            <h3 class="table-title">Today's Transactions</h3>
            <input type="text" class="search-box" placeholder="Search by account..." onkeyup="filterTable('todayTable', this.value)">
          </div>
          <div class="table-wrapper">
            <table id="todayTable">
              <thead>
                <tr>
                  <th>Time</th>
                  <th>Account No</th>
                  <th>Type</th>
                  <th>Amount</th>
                  <th>Balance After</th>
                  <th>To Account</th>
                </tr>
              </thead>
              <tbody>
                <% todayTransactions.forEach(tx => { %>
                <tr>
                  <td><%= new Date(tx.date).toLocaleTimeString() %></td>
                  <td><strong><%= tx.account_no %></strong></td>
                  <td>
                    <span class="badge badge-<%= tx.type %>"><%= tx.type %></span>
                  </td>
                  <td class="<%= tx.type === 'deposit' ? 'amount-positive' : 'amount-negative' %>">
                    <%= tx.type === 'deposit' ? '+' : '-' %>₹<%= parseFloat(tx.amount).toFixed(2) %>
                  </td>
                  <td>₹<%= parseFloat(tx.balance).toFixed(2) %></td>
                  <td><%= tx.to_account || '-' %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>
  </div>

  <script>
    function openTab(tabName) {
      // Hide all tab contents
      const contents = document.getElementsByClassName('tab-content');
      for (let i = 0; i < contents.length; i++) {
        contents[i].classList.remove('active');
      }

      // Remove active class from all tabs
      const tabs = document.getElementsByClassName('tab');
      for (let i = 0; i < tabs.length; i++) {
        tabs[i].classList.remove('active');
      }

      // Show selected tab
      document.getElementById(tabName).classList.add('active');
      event.target.closest('.tab').classList.add('active');
    }

    function filterTable(tableId, searchValue) {
      const table = document.getElementById(tableId);
      const tr = table.getElementsByTagName('tr');
      const filter = searchValue.toUpperCase();

      for (let i = 1; i < tr.length; i++) {
        let txtValue = tr[i].textContent || tr[i].innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1) {
          tr[i].style.display = '';
        } else {
          tr[i].style.display = 'none';
        }
      }
    }
  </script>

</body>
</html>