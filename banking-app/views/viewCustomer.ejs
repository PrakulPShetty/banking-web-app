<!DOCTYPE html>
<html>
<head>
  <title>View Customer</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body { font-family: Arial, sans-serif; background:#1e1e1e; color:#fff; padding:20px; }
    .card { background:#2a2a2a; padding:40px; border-radius:12px; max-width:1000px; margin:auto; box-shadow:0 4px 15px rgba(0,0,0,0.5); }
    input, button { padding:14px; border:none; border-radius:6px; margin:6px 0; font-size:15px; }
    input { width:100%; background:#333; color:#fff; }
    button { width:200px; background:#00adb5; color:#fff; cursor:pointer; font-weight:bold; transition:0.3s; }
    button:hover { background:#00929b; }
    .error { color:red; margin-bottom:10px; }
    .customer-info { margin-top:30px; }
    .customer-info p { margin:6px 0; }
    .form-grid { display:grid; grid-template-columns: 1fr 1fr; gap:30px 40px; }
    .form-actions { margin-top:30px; text-align:center; }
    .back-link { display:inline-block; margin-top:20px; color:#00adb5; text-decoration:none; font-size:14px; }
    .back-link:hover { text-decoration:underline; }
    h2 { text-align:center; margin-bottom:30px; }
  </style>
</head>
<body>
  <div class="card">
    <h2>View Customer</h2>

    <% if (error) { %>
      <p class="error"><%= error %></p>
    <% } %>

    <form action="/employee/view-customer" method="POST">
      <div class="form-grid">
        <input type="text" name="account_no" placeholder="Account Number" required>
        <input type="text" name="fullname" placeholder="Full Name" required>
      </div>

      <div class="form-actions">
        <button type="submit">Search</button>
      </div>
    </form>

    <% if (customer) { %>
      <div class="customer-info">
        <h3>Customer Details</h3>
        <p><strong>Account Number:</strong> <%= customer.account_no %></p>
        <p><strong>Full Name:</strong> <%= customer.fullname %></p>
        <p><strong>DOB:</strong> <%= customer.dob.toISOString().split('T')[0] %></p>
        <p><strong>Parent's Name:</strong> <%= customer.parents_name %></p>
        <p><strong>Email:</strong> <%= customer.email %></p>
        <p><strong>Phone:</strong> <%= customer.phone %></p>
        <p><strong>Aadhar:</strong> <%= customer.aadhar %></p>
        <p><strong>Address:</strong> <%= customer.address %></p>
        <p><strong>City:</strong> <%= customer.city %></p>
        <p><strong>State:</strong> <%= customer.state %></p>
        <p><strong>Pincode:</strong> <%= customer.pincode %></p>
        <p><strong>Balance:</strong> â‚¹<%= customer.balance %></p>
      </div>
    <% } %>

    <a href="/employee-dashboard" class="back-link">
      <i class="fa fa-arrow-left"></i> Back to Dashboard
    </a>

  </div>
</body>
</html>
