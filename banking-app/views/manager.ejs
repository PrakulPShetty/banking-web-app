<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bank Manager Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    :root {
      --primary: #4B0082;
      --primary-dark: #2E005F;
      --bg: #f5f3ff;
      --card-bg: #ffffff;
      --border: #dddddd;
      --text-dark: #222;
    }

    body {
      margin: 0;
      font-family: 'Poppins', sans-serif;
      background-color: var(--bg);
      color: var(--text-dark);
    }

    /* NAVBAR */
    .navbar {
      background: var(--primary);
      color: white;
      padding: 12px 25px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: fixed;
      top: 0;
      width: 100%;
      height: 60px;
      z-index: 999;
    }

    .navbar .logo {
      font-size: 22px;
      font-weight: 600;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    /* SIDEBAR */
    .sidebar {
      background: linear-gradient(var(--primary-dark), var(--primary));
      width: 230px;
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      padding-top: 80px;
      color: white;
      box-shadow: 3px 0 10px rgba(0,0,0,0.1);
      z-index: 998;
    }

    .sidebar ul {
      list-style: none;
      padding: 0;
    }

    .sidebar ul li {
      padding: 15px 20px;
      font-size: 15px;
      display: flex;
      align-items: center;
      gap: 12px;
      cursor: pointer;
      transition: 0.2s;
    }

    .sidebar ul li:hover {
      background: rgba(255, 255, 255, 0.2);
    }

    /* MAIN CONTENT */
    .main-content {
      margin-left: 230px;
      padding: 100px 30px;
    }

    h1 {
      color: var(--primary-dark);
      margin-bottom: 20px;
    }

    /* DASHBOARD CARDS */
    .cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 25px;
    }

    .card {
      background: var(--card-bg);
      padding: 20px;
      border-radius: 10px;
      text-align: center;
      border: 1px solid var(--border);
      box-shadow: 0 3px 8px rgba(0,0,0,0.08);
    }

    .card h3 {
      margin: 0 0 10px;
      color: var(--primary);
    }

    .card p {
      margin: 0;
      font-size: 22px;
      font-weight: bold;
    }

    /* TABLE */
    table {
      width: 100%;
      border-collapse: collapse;
      background: white;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 3px 8px rgba(0,0,0,0.1);
      margin-top: 20px;
    }

    th {
      background: var(--primary);
      color: white;
      padding: 12px;
      text-align: left;
    }

    td {
      padding: 12px;
      border-bottom: 1px solid #eee;
    }

    tr:hover {
      background: #f3eaff;
    }

    /* DELETE BUTTON */
    .btn-delete {
      background: #d9534f;
      padding: 6px 10px;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }

    .btn-delete:hover {
      background: #b52b27;
    }

    .btn-edit {
      background: #6a5acd;
      padding: 6px 10px;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }

    .btn-edit:hover {
      background: #4c3cbf;
    }
  </style>

</head>

<body>

  <!-- NAVBAR -->
  <div class="navbar">
    <div class="logo" onclick="location.href='/manager'">
      <i class="fa fa-building-columns"></i> NOVA BANK
    </div>

    <!-- FIXED: Manager Name now visible -->
    <div>
      <i class="fa fa-user-circle"></i> <%= managerName %>
    </div>
  </div>

  <!-- SIDEBAR -->
  <aside class="sidebar">
    <ul>
      <li onclick="location.href='/manager'"><i class="fa fa-home"></i> Dashboard</li>
      <li onclick="location.href='/add-employee-form'"><i class="fa fa-user-plus"></i> Add Employee</li>
      <li onclick="location.href='/employees'"><i class="fa fa-users"></i> View Employees</li>
      <li onclick="location.href='/reports'"><i class="fa fa-chart-line"></i> Reports</li>
      <li onclick="location.href='/logout'"><i class="fa fa-sign-out-alt"></i> Logout</li>
    </ul>
  </aside>

  <!-- MAIN CONTENT -->
  <main class="main-content">
    <h1>Manager Dashboard</h1>

    <div class="cards">
      <div class="card"><h3>Total Employees</h3><p><%= totalEmployees %></p></div>
      <div class="card"><h3>Total Salary</h3><p>₹<%= totalSalary %></p></div>
      <div class="card"><h3>Managers</h3><p><%= totalManagers %></p></div>
      <div class="card"><h3>Cashiers</h3><p><%= totalCashiers %></p></div>
      <div class="card"><h3>Accountants</h3><p><%= totalAccountants %></p></div>
      <div class="card"><h3>Clerks</h3><p><%= totalClerks %></p></div>
      <div class="card"><h3>IT Support</h3><p><%= totalITSupport %></p></div>
    </div>

    <h2>Employee List</h2>

    <table>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th>Salary</th>
        <th>Actions</th>
      </tr>

      <% employees.forEach(emp => { %>
      <tr>
        <td><%= emp.id %></td>
        <td><%= emp.name %></td>
        <td><%= emp.username %></td>
        <td><%= emp.email %></td>
        <td><%= emp.role %></td>
        <td>₹<%= emp.salary %></td>

        <td>
          <form action="/delete-employee/<%= emp.id %>" method="POST" style="display:inline;">
            <button class="btn-delete" onclick="return confirm('Delete this employee?')">
              Delete
            </button>
          </form>
        </td>

      </tr>
      <% }) %>

    </table>

  </main>

</body>
</html>
