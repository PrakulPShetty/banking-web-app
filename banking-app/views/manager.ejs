<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bank Manager Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #4B0082; /* Indigo */
      --primary-dark: #2E005F; /* Darker indigo */
      --accent: #b8a1e2;
      --bg-light: #f9f9ff;
      --text-dark: #1a1a1a;
      --card-bg: #ffffff;
      --border-light: #e0e0e0;
    }

    body {
      margin: 0;
      font-family: 'Poppins', sans-serif;
      background-color: var(--bg-light);
      color: var(--text-dark);
      overflow-x: hidden;
    }

    /* Navbar */
    .navbar {
      background: var(--primary);
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 10px 25px;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 60px;
      z-index: 1000;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .navbar .logo {
      display: flex;
      align-items: center;
      gap: 10px;
      font-size: 1.3rem;
      font-weight: 600;
      cursor: pointer;
      transition: opacity 0.2s ease;
    }

    .navbar .logo:hover {
      opacity: 0.8;
    }

    .navbar .logo img {
      width: 35px;
      height: 35px;
      border-radius: 50%;
      background: #fff;
      object-fit: cover;
    }

    .navbar .user {
      font-size: 0.95rem;
      color: #f0eaff;
    }

    /* Sidebar */
    .sidebar {
      background: linear-gradient(to bottom, var(--primary-dark), var(--primary));
      width: 230px;
      height: 100vh;
      position: fixed;
      left: 0;
      top: 0;
      padding-top: 80px;
      transition: width 0.3s ease, background 0.3s ease;
      box-shadow: 2px 0 8px rgba(0,0,0,0.1);
      overflow: hidden;
      z-index: 999;
    }

    .sidebar.collapsed {
      width: 70px;
    }

    .sidebar ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .sidebar ul li {
      padding: 15px 20px;
      display: flex;
      align-items: center;
      gap: 12px;
      cursor: pointer;
      color: #fff;
      transition: background 0.2s ease;
      white-space: nowrap;
    }

    .sidebar ul li:hover {
      background-color: rgba(255, 255, 255, 0.15);
    }

    .sidebar ul li i {
      font-size: 1.2rem;
      min-width: 25px;
      text-align: center;
    }

    .sidebar.collapsed ul li span {
      display: none;
    }

    /* Main content */
    .main-content {
      margin-left: 230px;
      padding: 100px 30px 30px 30px;
      transition: margin-left 0.3s ease;
    }

    .sidebar.collapsed + .main-content {
      margin-left: 70px;
    }

    h1 {
      color: var(--primary-dark);
      font-size: 1.6rem;
      margin-bottom: 20px;
    }

    .cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .card {
      background-color: var(--card-bg);
      border-radius: 10px;
      padding: 20px;
      text-align: center;
      box-shadow: 0 3px 6px rgba(0,0,0,0.08);
      border: 1px solid var(--border-light);
    }

    .card h3 {
      color: var(--primary);
      margin-bottom: 8px;
    }

    .card p {
      font-size: 1.5rem;
      font-weight: bold;
    }

    /* Table */
    table {
      width: 100%;
      border-collapse: collapse;
      background-color: #fff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 3px 6px rgba(0,0,0,0.08);
    }

    th {
      background-color: var(--primary);
      color: #fff;
      padding: 10px;
      text-align: left;
    }

    td {
      padding: 10px;
      border-bottom: 1px solid #ddd;
    }

    tr:hover {
      background-color: #f3eaff;
    }

    .btn {
      padding: 5px 10px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      color: #fff;
      font-size: 0.9rem;
    }

    .btn-edit {
      background-color: #6a5acd;
    }

    .btn-delete {
      background-color: #d9534f;
    }

    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-100%);
      }
      .sidebar.active {
        transform: translateX(0);
      }
      .main-content {
        margin-left: 0;
      }
    }
  </style>
</head>
<body>
  <nav class="navbar">
    <div class="logo" id="toggleSidebar">
      <img src="https://i.imgur.com/1XKz5xC.png" alt="logo"> <!-- dummy logo -->
      NOVA BANK
    </div>
    <div class="user">
      <i class="fa fa-user-circle"></i> <%= managerName %>
    </div>
  </nav>

  <aside class="sidebar" id="sidebar">
    <ul>
      <li><i class="fa fa-user-plus"></i> <span>Add Employee</span></li>
      <li><i class="fa fa-users"></i> <span>View Employees</span></li>
      <li><i class="fa fa-chart-bar"></i> <span>Reports</span></li>
      <li><i class="fa fa-sign-out-alt"></i> <span>Logout</span></li>
    </ul>
  </aside>

  <main class="main-content" id="mainContent">
    <h1>Bank Manager Dashboard</h1>

    <div class="cards">
      <div class="card"><h3>Total Employees</h3><p><%= totalEmployees %></p></div>
      <div class="card"><h3>Total Salary</h3><p><%= totalSalary %></p></div>
      <div class="card"><h3>Total Managers</h3><p><%= totalManagers %></p></div>
      <div class="card"><h3>Total Cashiers</h3><p><%= totalCashiers %></p></div>
      <div class="card"><h3>Total Accountants</h3><p><%= totalAccountants %></p></div>
      <div class="card"><h3>Total Clerks</h3><p><%= totalClerks %></p></div>
      <div class="card"><h3>Total IT Support</h3><p><%= totalIT %></p></div>
    </div>

    <h2>Employee List</h2>
    <table>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th>Salary</th>
        <th>Action</th>
      </tr>
      <% employees.forEach(emp => { %>
      <tr>
        <td><%= emp.id %></td>
        <td><%= emp.name %></td>
        <td><%= emp.username %></td>
        <td><%= emp.email %></td>
        <td><%= emp.role %></td>
        <td>â‚¹<%= emp.salary %></td>
        <td>
          <button class="btn btn-edit">Edit</button>
          <button class="btn btn-delete">Delete</button>
        </td>
      </tr>
      <% }) %>
    </table>
  </main>

  <script>
    const sidebar = document.getElementById('sidebar');
    const toggleBtn = document.getElementById('toggleSidebar');
    const mainContent = document.getElementById('mainContent');

    toggleBtn.addEventListener('click', () => {
      sidebar.classList.toggle('collapsed');
      mainContent.classList.toggle('collapsed');
    });
  </script>
</body>
</html>
