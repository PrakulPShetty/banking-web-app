CREATE TABLE managers (
    id SERIAL PRIMARY KEY,
    username VARCHAR(50) UNIQUE NOT NULL,
    email VARCHAR(100) UNIQUE NOT NULL,
    password VARCHAR(255) NOT NULL
);


CREATE TABLE employees_credentials (
    id SERIAL PRIMARY KEY,
    username VARCHAR(50) UNIQUE NOT NULL,  
    name VARCHAR(100) NOT NULL,           
    email VARCHAR(100) UNIQUE NOT NULL,
    role VARCHAR(50) NOT NULL,
    salary NUMERIC(12, 2) NOT NULL,
    password VARCHAR(255) NOT NULL        
);

CREATE TABLE customers (
    customer_id SERIAL PRIMARY KEY,         -- Auto increment unique ID
    account_no VARCHAR(20) UNIQUE NOT NULL, -- Auto-generated like novabank001
    fullname VARCHAR(100) NOT NULL,
    dob DATE NOT NULL,
    parents_name VARCHAR(100) NOT NULL,     -- Father/Motherâ€™s name
    email VARCHAR(100) NOT NULL UNIQUE,
    phone VARCHAR(15) NOT NULL UNIQUE,
    aadhar VARCHAR(20) NOT NULL UNIQUE,
    address TEXT NOT NULL,
    city VARCHAR(50) NOT NULL,
    state VARCHAR(50) NOT NULL,
    pincode VARCHAR(10) NOT NULL,
    balance DECIMAL(12,2) DEFAULT 0.00,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);


CREATE TABLE  transactions (
    id SERIAL PRIMARY KEY,
    account_no VARCHAR(20) NOT NULL,
    type VARCHAR(20) NOT NULL, -- deposit, withdraw, transfer
    amount NUMERIC(12,2) NOT NULL,
    balance NUMERIC(12,2) NOT NULL, -- balance after transaction
    to_account VARCHAR(20), -- for transfers
    date TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);
