<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NOVA Manager Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Gradient Animation */
    @keyframes gradientShift {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    .animated-bg {
      background: linear-gradient(270deg, #f8fafc, #e0f2fe, #bfdbfe, #f8fafc);
      background-size: 400% 400%;
      animation: gradientShift 12s ease infinite;
    }
  </style>
</head>
<body class="animated-bg text-gray-900">

  <!-- Navbar -->
  <nav class="fixed top-0 left-0 w-full bg-white shadow-md z-50">
    <div class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">
      <div class="flex items-center">
        <img src="/NOVA BANK.png" alt="NOVA Banking Logo" class="h-10 w-10 object-contain mr-2">
        <span class="text-blue-900 text-xl font-bold tracking-wide">NOVA MANAGER</span>
      </div>
      <button class="bg-blue-900 text-white px-4 py-2 rounded-lg hover:bg-blue-800 transition">Logout</button>
    </div>
  </nav>

  <!-- Sidebar + Main -->
  <div class="flex pt-20 min-h-screen">
    
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-lg border-r border-gray-200 p-6">
      <h2 class="text-lg font-semibold text-blue-900 mb-6">Manager Menu</h2>
      <ul class="space-y-4">
        <li><a href="#" class="block text-gray-700 hover:text-blue-900 font-medium">üè† Dashboard</a></li>
        <li><a href="#add-employee" class="block text-gray-700 hover:text-blue-900 font-medium">‚ûï Add Employee</a></li>
        <li><a href="#employee-list" class="block text-gray-700 hover:text-blue-900 font-medium">üìã Employee List</a></li>
      </ul>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-8">

      <!-- Heading -->
      <h1 class="text-2xl font-bold text-blue-900 mb-6">Manager Dashboard</h1>

      <!-- Add Employee Form -->
      <div id="add-employee" class="bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-10">
        <h2 class="text-lg font-semibold text-blue-900 mb-4">Add New Employee</h2>
        <form action="/manager/add-employee" method="POST" class="space-y-5">
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Employee ID</label>
            <input type="text" name="emp_id" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
            <input type="text" name="name" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <input type="email" name="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
            <input type="password" name="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Role</label>
            <select name="role" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900">
              <option value="Employee">Employee</option>
              <option value="Manager">Manager</option>
            </select>
          </div>

          <button type="submit" class="bg-blue-900 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-800 transition">
            Add Employee
          </button>
        </form>
      </div>

      <!-- Employee List -->
      <div id="employee-list" class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-blue-900 mb-4">Employee List</h2>
        <table class="w-full border-collapse">
          <thead>
            <tr class="bg-blue-50 text-blue-900">
              <th class="border p-2">EmpID</th>
              <th class="border p-2">Name</th>
              <th class="border p-2">Email</th>
              <th class="border p-2">Role</th>
            </tr>
          </thead>
          <tbody>
            <!-- Example Rows (Later populated from DB) -->
            <tr>
              <td class="border p-2">101</td>
              <td class="border p-2">John Doe</td>
              <td class="border p-2">john@nova.com</td>
              <td class="border p-2">Employee</td>
            </tr>
            <tr>
              <td class="border p-2">102</td>
              <td class="border p-2">Alice Smith</td>
              <td class="border p-2">alice@nova.com</td>
              <td class="border p-2">Manager</td>
            </tr>
          </tbody>
        </table>
      </div>

    </main>
  </div>

</body>
</html>
