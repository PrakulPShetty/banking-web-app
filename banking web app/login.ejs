<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NOVA Banking Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Gradient Animation */
    @keyframes gradientShift {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    .animated-bg {
      background: linear-gradient(270deg, #f8fafc, #e0f2fe, #bfdbfe, #f8fafc);
      background-size: 400% 400%;
      animation: gradientShift 12s ease infinite;
    }
  </style>
</head>
<body class="animated-bg text-gray-900">

  <!-- Fixed Navbar -->
  <nav class="fixed top-0 left-0 w-full bg-white shadow-md">
    <div class="max-w-7xl mx-auto px-4 py-3 flex items-center">
      <!-- Logo -->
      <div class="flex items-center">
        <img src="/NOVA BANK.png" alt="NOVA Banking Logo" class="h-10 w-10 object-contain mr-2">
        <span class="text-blue-900 text-xl font-bold tracking-wide">NOVA BANKING</span>
      </div>
    </div>
  </nav>

  <!-- Login Section -->
  <div class="flex items-center justify-center min-h-screen pt-20">
    <div class="bg-white border border-gray-200 shadow-xl rounded-xl p-8 w-full max-w-md transform transition duration-500 hover:scale-105 hover:shadow-2xl">
      <h2 class="text-2xl font-semibold text-center text-blue-900 mb-6">Employee Login</h2>

      <form action="/login" method="POST" class="space-y-5">
        <!-- Username -->
        <div>
          <label for="username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
          <input type="text" id="username" name="username" placeholder="Enter your EmpID or Email"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:outline-none transition">
        </div>

        <!-- Password -->
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter your password"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:outline-none transition">
        </div>

        <!-- Remember Me -->
        <div class="flex items-center justify-between">
          <label class="flex items-center text-sm text-gray-600">
            <input type="checkbox" class="mr-2 rounded border-gray-300 text-blue-900 focus:ring focus:ring-blue-900">
            Remember me
          </label>
          <a href="/manager" class="text-sm text-blue-700 hover:underline">Manager click here</a>
        </div>

        <!-- Login Button -->
        <button type="submit"
          class="w-full bg-blue-900 text-white py-2 rounded-lg font-semibold hover:bg-blue-800 transition transform hover:scale-105">
          Login
        </button>
      </form>

      <!-- Footer Links -->
      <div class="mt-6 text-center text-sm text-gray-600 space-x-2">
        <a href="#" class="hover:underline">Terms</a> | 
        <a href="#" class="hover:underline">Privacy</a> | 
        <a href="#" class="hover:underline">IT Support</a>
      </div>
    </div>
  </div>

</body>
</html>
